# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/hotel_booking_db
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/hotel_booking_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# OAuth2 / Keycloak Configuration
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=hotel-booking
KEYCLOAK_CLIENT_ID=hotel-booking-api
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@hotelbooking.com

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Monitoring Configuration
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_METRICS_PORT=8001

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Environment
ENVIRONMENT=development
DEBUG=true

# Application
APP_NAME=Hotel Booking API
VERSION=1.0.0
